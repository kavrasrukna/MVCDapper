@model IEnumerable<aspnetmvcdapper.Models.urunmodel>
@{ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml"; }  <!--_mainlayout adında shared içine view oluşturdum. burayada urlsini ekledim-->

<p>
    @*@Html.ActionLink("Yeni Ürün Ekle", "ekle")*@ <!--link şeklinde -->
    <button type="button" class="btn btn-info" onclick="location.href = '@Url.Action("ekle","urun")'">Ürün Ekle</button><!--buton şeklinde -->
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.urunad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kategoriid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stok)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.urunad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.marka)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.kategoriid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.fiyat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.stok)
    </td>
    <td>
        @*@Html.ActionLink("Düzenle", "ekle", new { id = item.urunid }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.urunid })*@
        <button type="button" class="btn btn-warning" onclick="location.href = '@Url.Action("ekle","urun",new { id = item.urunid })'">Düzenle</button>
        @*<button type="button" class="btn btn-danger" onclick="location.href = '@Url.Action("ekle","urun", new { id = item.urunid }))'">Sil</button>*@@*direk uyarı vermeden siler ve ındex sayfasına yönlendirir*@
        @Html.ActionLink("Sil", "Delete", new { id = item.urunid }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İsteğinizden Emin Misiniz?')" }) @*1.parametre adı butonda gözükecek ad,2.parametre gideceği yer*@
    </td>
</tr>
    }

</table>
